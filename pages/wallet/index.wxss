/**index.wxss**/
.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.wallet-top {
    width:100%;
    height:400rpx;
    background: #ffffff;
    flex-direction: row;
    display: flex;
}
.wallet-top-wrap{
    display: flex;
    display: flex;
    flex-direction: column;
    flex:6
}
.wallet-top-text{
    margin-top: 60rpx;
    font-size: 24rpx;
    margin-left: 40px;
}
.wallet-top-num{
    margin-top: 10rpx;
    font-size: 100rpx;
    color:#fbd52a;
    margin-left: 40px;
}

.menu-list{
    width: 100%;
    margin-top: 20rpx;
    flex-direction: column;
}
.menu-item{
    width: 100%;
    flex-direction: column;
}
.menu-item-wrap{
    width: 620rpx;
    height: 130rpx;
    margin: 0 auto;
    flex-direction: row;
    border-bottom: 1rpx solid #eeeeee;
}
.menu-item-icon{
    width: 40rpx;
    height: 40rpx;
    margin-top: 48rpx;
    margin-right: 50rpx;
    font-size: 35rpx;
    float: left;
}
.menu-item-title{
    width: 180rpx;
    line-height: 130rpx;
    font-size: 35rpx;
    display: block;
    float: left;
}

.menu-item-amount{
    width: 200rpx;
    line-height: 130rpx;
    font-size: 35rpx;
    color: #ffd000;
    display: block;
    float: left;
}

.menu-item-linkText{
    text-align: center;
    width: 150rpx;
    height: 50rpx;
    margin-top: 20px;
    line-height: 50rpx;
    font-size: 35rpx;
    display: block;
    float: left;
    border:1rpx solid #333333;
    border-radius: 20rpx;
}