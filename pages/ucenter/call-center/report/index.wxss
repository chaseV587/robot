/**index.wxss**/
.container {
    width: 700rpx;
    margin: 20rpx 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.robot-wrap{
    width: 700rpx;
    height: 500rpx;
    position: relative;
    display: inline-block;
}
.robotImg{
    width: 700rpx;
    height: 500rpx;
    position: absolute;
    top:0;
    left: 0;
    z-index: 1;
}
.fault-list{
    width: 700rpx;
    height: 500rpx;
    position: absolute;
    top:0;
    left: 0;
    z-index: 10;
    flex-direction: row;
}

.fault-item{
    width: 190rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 26rpx;
    position: absolute;
}
.faultIcon1{
    width: 190rpx;
    height: 100rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}
.fault-1{
    top:88rpx;
}
.fault-2{
    top: 120rpx;
    right: 0;
}
.fault-3{
    top: 220rpx;
}
.fault-4{
    top: 250rpx;
    right: 0;
}
.fault-text{
    color: #ed6f05;
    position: relative;
    z-index: 2;
}
.fault-active{
    color: #ffffff;
}

.reason-list{
    width: 700rpx;
    height: 200rpx;
    position: relative;
    left: 8px;
}
.reason-item{
    width: 150rpx;
    margin: 20rpx 23rpx 20rpx 0;
    height: 45rpx;
    display: block;
    float: left;
    text-align: center;
    line-height: 45rpx;
    font-size: 26rpx ;
    color: #999999;
    border-radius: 20rpx;
    border: 1rpx solid #999999;

}
.reason-active{
    color: #ed6f05;
    border: 1rpx solid #ed6f05;
}

.other-reason{
    width: 650rpx;
    height: 260rpx;
    padding: 10rpx;
    line-height: 60rpx;
    border: 1px solid #999;
    margin: 10rpx 75rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
}

.site-data{
    width: 650rpx;
    height: 130rpx;
    line-height: 130rpx;
    font-size: 30rpx;
    flex-direction: row;
}
.site-text{
    float: left;
}
.site-icon{
    float: left;
    width: 30rpx;
    height: 45rpx;
    margin: 42rpx 0 0 40rpx ;
}
.camera-wrap{
    width: 650rpx;
    flex-direction: column;
}
.camera-title{
    width: 100%;
    font-size: 30rpx;
    font-weight: bolder;
}
.camera-list{
    width: 650rpx;
    flex-direction: row;
}
.camera-icon{
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.confirm-wrap{
    width: 500rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: relative;
    text-align: center;
    margin-top: 70rpx;
    margin-bottom: 60rpx;
}
.confirm-icon{
    width: 500rpx;
    height: 80rpx;
    position: absolute;
    top: 0;
    left: 0;
}