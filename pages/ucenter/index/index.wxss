/**index.wxss**/
.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.userinfo-top {
    width:100%;
    height:260rpx;
    background: #ffffff;
    flex-direction: row;
    display: flex;
}
.userinfo-Tleft{
    display: flex;
    flex:2;
    flex-direction: row-reverse;
}
.userinfo-Tright{
    display: flex;
    display: flex;
    flex-direction: column;
    flex:6
}
.userinfo-avata{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    float:right;
    margin-top: 40rpx;
}
.userinfo-tel{
    margin-top: 60rpx;
    font-size: 35rpx;
    margin-left: 40px;
}
.userinfo-name{
    margin-top: 10rpx;
    color:#fbd52a;
    margin-left: 40px;
}

.menu-list{
    width: 100%;
    margin-top: 20rpx;
    flex-direction: column;
}
.menu-item{
    width: 100%;
    flex-direction: column;
}
.menu-item-wrap{
    width: 620rpx;
    height: 130rpx;
    margin: 0 auto;
    flex-direction: row;
    border-bottom: 1rpx solid #eeeeee;
}
.menu-item-icon{
    width: 40rpx;
    height: 40rpx;
    margin-top: 48rpx;
    margin-right: 50rpx;
    font-size: 35rpx;
    float: left;
}
.menu-item-text{
    line-height: 130rpx;
    display: block;
}

.switchBtn{
    margin-top: 300rpx;
    width: 502rpx;
    height: 82rpx;
}