/**index.wxss**/
.container {
    width: 100%;
    min-height: 100vh;
    padding: 30rpx 25rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    background: #efefef;
}
.trips-list-wrap{

}

.trip-wrap{
    width: 700rpx;
    min-height: 220rpx;
    background: #ffffff;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
    flex-direction: column;

}
.trip-detail1, .trip-detail2, .trip-detail3{
    width: 100%;
    flex-direction: row;
    height: 70rpx;
    display: inline-block;
}
.trip-icon, .trip-icon2{
    width: 40rpx;
    height: 40rpx;
    margin: 25rpx;
    display: inline-block;
    float: left;
}
.trip-icon2{
    margin: 10rpx 25rpx;
}
.trip-time{
    line-height: 90rpx;
    display: inline-block;
    float: left;
    font-size: 24rpx;
}
.trip-status{
    line-height: 90rpx;
    display: inline-block;
    float: right;
    font-size: 24rpx;
    margin-right: 30rpx;
}
.trip-text{
    line-height: 24rpx;
    display: inline-block;
    float: left;
    font-size: 30rpx;
    margin-left: 90rpx;
}
.trip-text-time{
    font-weight: bolder;
    padding: 0 0.2em;
}
.trip-amount{
    line-height: 70rpx;
    display: inline-block;
    float: right;
    font-size: 24rpx;
    margin-right: 30rpx;
}
.trip-site{
    font-size: 24rpx;
    color: #999999;
}

.done-color{
    color: #999999;
}
.yellow-color{
    color: #ffd100
}
.red-color{
    color: #ff8181;
}
.font-weight{
    font-weight: bolder;
}